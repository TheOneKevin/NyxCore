{
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "-sv --lint-only +define+VERILATOR_LINT --bbox-unsup lint/waiver.vlt",
    "verilog.linting.verilator.runAtFileLocation": false,
    "systemverilog.disableLinting": false,
    "systemverilog.excludeIndexing": [
        "openlane/**",
        ".vscode/**",
        ".git/**"
    ],
    "systemverilog.includeIndexing": [
        "**/*.{sv,svh,v,vh}"
    ],
    "systemverilog.launchConfiguration": "verilator -sv --lint-only +define+VERILATOR_LINT -Irtl lint/waiver.vlt",
    "python.pythonPath": "/usr/bin/python3"
}