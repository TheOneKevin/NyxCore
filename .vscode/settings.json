{
    // imctradingbv.svlangserver
    "systemverilog.disableLinting": false,
    "systemverilog.excludeIndexing": "ip/core/**,**/openlane/**,.vscode/*,.git/**",
    "systemverilog.includeIndexing": [
        "**/*.{sv,svh,v,vh}"
    ],
    "systemverilog.launchConfigurationVerilator": "verilator -sv -F lint/filelist.f -Wall",
    "systemverilog.launchConfiguration": "verilator -sv -F lint/filelist.f -Wall",
    "systemverilog.compileOnSave": true,

    // vscode configs
    "python.pythonPath": "/usr/bin/python3",
    "python.analysis.extraPaths": [
        "./dv/coco"
    ],
    "search.useGlobalIgnoreFiles": true,
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/runs/**": true,
        "**/_build/**": true,
        "**/build/**": true
    },
    "python.linting.enabled": true,

    // lextudio.restructuredtext
    "restructuredtext.sphinxBuildPath": "env/bin/sphinx-build",
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "restructuredtext.languageServer.disabled": true,
    "restructuredtext.preview.docutil.disabled": true,
    "restructuredtext.linter.disabled": true,
    "restructuredtext.preview.sphinx.disabled": true,
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "-sv -F lint/filelist.f -Wall"
}